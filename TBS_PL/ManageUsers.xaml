<Window x:Class="TBS_PL.ManageUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBS_PL"
        mc:Ignorable="d"
        Title="ManageUsers" Height="450" Width="800">
    <Grid>
        <Grid x:Name="gridEmployee" HorizontalAlignment="Left" Visibility="Hidden" Height="317" Margin="64,92,0,0" VerticalAlignment="Top" Width="328">
            <TextBox x:Name="txtEId" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="184,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtEName" HorizontalAlignment="Left" Height="23" Margin="184,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtDesgn" HorizontalAlignment="Left" Height="23" Margin="184,89,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="23" Margin="184,129,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="184,169,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="23" Margin="184,211,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtDL" HorizontalAlignment="Left" Height="23" Margin="184,254,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <Label Content="Employee ID" HorizontalAlignment="Left" Margin="29,7,0,0" VerticalAlignment="Top"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="29,52,0,0" VerticalAlignment="Top"/>
            <Label Content="Designation" HorizontalAlignment="Left" Margin="29,86,0,0" VerticalAlignment="Top"/>
            <Label Content="Phone Number" HorizontalAlignment="Left" Margin="29,126,0,0" VerticalAlignment="Top"/>
            <Label Content="Email ID" HorizontalAlignment="Left" Margin="29,169,0,0" VerticalAlignment="Top"/>
            <Label Content="Address" HorizontalAlignment="Left" Margin="29,211,0,0" VerticalAlignment="Top"/>
            <Label Content="Driving License Number" HorizontalAlignment="Left" Margin="29,254,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="29,287,0,0" VerticalAlignment="Top" Width="75" Click="BtnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="184,287,0,0" VerticalAlignment="Top" Width="75" Click="BtnDelete_Click"/>
        </Grid>
        <Label Content="Select typr of Users to Manage" HorizontalAlignment="Left" Margin="64,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="23" Margin="410,46,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="rbEmployee" Content="Employee" HorizontalAlignment="Left" Margin="64,51,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbCustomer" Content="Customer" HorizontalAlignment="Left" Margin="157,52,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="gridCustomer" HorizontalAlignment="Left" Visibility="Hidden" Height="317" Margin="64,77,0,0" VerticalAlignment="Top" Width="283">
            <TextBox x:Name="txtCId"  IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="140,33,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtCName"  HorizontalAlignment="Left" Height="23" Margin="140,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtCPhone"  HorizontalAlignment="Left" Height="23" Margin="140,126,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtCEmail"  HorizontalAlignment="Left" Height="23" Margin="140,169,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtCAddress"  HorizontalAlignment="Left" Height="23" Margin="140,214,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <Label Content="Customer ID" HorizontalAlignment="Left" Margin="29,33,0,0" VerticalAlignment="Top"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="29,80,0,0" VerticalAlignment="Top"/>

            <Label Content="Phone Number" HorizontalAlignment="Left" Margin="29,126,0,0" VerticalAlignment="Top"/>
            <Label Content="Email ID" HorizontalAlignment="Left" Margin="29,169,0,0" VerticalAlignment="Top"/>
            <Label Content="Address" HorizontalAlignment="Left" Margin="29,211,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnupdatec" Content="Update" HorizontalAlignment="Left" Margin="29,271,0,0" VerticalAlignment="Top" Width="75" Click="Btnupdatec_Click" />
            <Button x:Name="btndeletec" Content="Delete" HorizontalAlignment="Left" Margin="140,271,0,0" VerticalAlignment="Top" Width="75" Click="Btndeletec_Click" />
        </Grid>
        <Button x:Name="btnMainSearch" Content="Search" HorizontalAlignment="Left" Margin="586,46,0,0" VerticalAlignment="Top" Width="74" Click="BtnMainSearch_Click"/>
        <Label Content="Enter CustomerID/EmployeeID" HorizontalAlignment="Left" Margin="410,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
