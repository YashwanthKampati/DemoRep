<Window x:Class="TBS_PL.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBS_PL"
        mc:Ignorable="d"
        Title="ChangePassword" Height="450" Width="800">
    <Grid>
        <Label Content="Enter Login ID" HorizontalAlignment="Left" Margin="211,91,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLoginID" HorizontalAlignment="Left" Height="23" Margin="346,91,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNewPwd" HorizontalAlignment="Left" Height="23" Margin="346,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Enter New Password" HorizontalAlignment="Left" Margin="211,153,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnChangePwd" Content="Change Password" HorizontalAlignment="Left" Margin="211,213,0,0" VerticalAlignment="Top" Width="120" Height="28" Click="BtnChangePwd_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="346,213,0,0" VerticalAlignment="Top" Width="120" Height="28" Click="BtnCancel_Click"/>

    </Grid>
</Window>
